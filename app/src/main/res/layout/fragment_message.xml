<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat Options"
        android:textColor="@color/bonifete7"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your preferred chat mode"
        android:textColor="#4B5563"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/generalChatButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textColor="#1F2937"
        android:text="General Chat"
        app:cornerRadius="12dp"
        app:backgroundTint="#FFFFFF"
        app:strokeColor="#E5E7EB"
        app:strokeWidth="1dp"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        app:iconTint="#4B5563"
        app:layout_constraintTop_toBottomOf="@id/subtitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/generalChatDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat with everyone in the community"
        android:textSize="14sp"
        android:textColor="#6B7280"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/generalChatButton"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/privateChatButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textColor="#1F2937"
        android:text="Private Chat"
        app:cornerRadius="12dp"
        app:backgroundTint="#FFFFFF"
        app:strokeColor="#E5E7EB"
        app:strokeWidth="1dp"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        app:iconTint="#4B5563"
        app:layout_constraintTop_toBottomOf="@id/generalChatDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/privateChatDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="One-on-one conversations"
        android:textSize="14sp"
        android:textColor="#6B7280"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/privateChatButton"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botChatButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textColor="#1F2937"
        android:text="Chat with Bot"
        app:cornerRadius="12dp"
        app:backgroundTint="#FFFFFF"
        app:strokeColor="#E5E7EB"
        app:strokeWidth="1dp"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        app:iconTint="#4B5563"
        app:layout_constraintTop_toBottomOf="@id/privateChatDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/botChatDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get instant assistance from our AI"
        android:textSize="14sp"
        android:textColor="#6B7280"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/botChatButton"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Footer Information Text -->
    <TextView
        android:id="@+id/footerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your conversations are secure and private"
        android:textColor="#6B7280"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/botChatDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>