<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="16dp"
        android:paddingBottom="32dp"
        android:paddingTop="16dp">

        <!-- SMOKING SECTION -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- SMOKING SECTION HEADER WITH TOGGLE -->
                <LinearLayout
                    android:id="@+id/smoking_section_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/a7mer"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/cig"
                        app:tint="#FFFFFF"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Smoking icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Smoking Section"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF" />

                    <ImageButton
                        android:id="@+id/btn_toggle_smoking"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/arrow_up_float"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        app:tint="#FFFFFF"
                        android:contentDescription="Toggle smoking section" />
                </LinearLayout>

                <!-- SMOKING CONTENT -->
                <LinearLayout
                    android:id="@+id/smoking_section_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="16dp">

                    <!-- Lung Damage Progress Bar -->
                    <TextView
                        android:id="@+id/lung_damage_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lung Health"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/a7mer"
                        android:layout_marginBottom="8dp" />

                    <ProgressBar
                        android:id="@+id/lung_damage_bar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:scaleY="3"
                        android:progress="70"
                        android:max="100"
                        android:progressTint="@color/a7mer"
                        android:progressBackgroundTint="#E0E0E0"
                        android:layout_marginBottom="24dp" />

                    <!-- Time Left Until Full Quit Goal -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#F9F9F9"
                        app:cardElevation="2dp"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/quit_goal_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Time Remaining to Quit Goal"
                                android:textStyle="bold"
                                android:textColor="@color/a7mer"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:layout_marginBottom="12dp" />

                            <!-- Overall Progress Stats -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/days_left"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="15"
                                        android:textColor="@color/black"
                                        android:textSize="24sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="days"
                                        android:textColor="@color/gray"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="40dp"
                                    android:background="#E0E0E0" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/hours_left"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10"
                                        android:textColor="@color/black"
                                        android:textSize="24sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="hours"
                                        android:textColor="@color/gray"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="40dp"
                                    android:background="#E0E0E0" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/minutes_left"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="25"
                                        android:textColor="@color/black"
                                        android:textSize="24sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="minutes"
                                        android:textColor="@color/gray"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overall Progress"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/a7mer"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="24dp">

                        <!-- Days Tracked -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/calendar_icon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/calendar"
                                android:contentDescription="Calendar icon" />

                            <TextView
                                android:id="@+id/stat_days_tracked"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textColor="#333333"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="days tracked"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Cigarettes Avoided -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/cig_icon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/cig"
                                app:tint="@color/black"
                                android:contentDescription="Cigarette icon" />

                            <TextView
                                android:id="@+id/stat_cigs_avoided"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textColor="#333333"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="avoided"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Money Saved -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/wallet_icon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/money"
                                android:contentDescription="Wallet icon" />

                            <TextView
                                android:id="@+id/stat_money_saved"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0Dt"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="saved"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Time Won -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/clock_icon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/clock"
                                app:tint="@color/black"
                                android:contentDescription="Clock icon" />

                            <TextView
                                android:id="@+id/stat_time_won"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0h"
                                android:textSize="18sp"
                                android:textColor="#333333"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="won back"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Smoking Daily Check Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_smoking_daily_check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daily Smoking Check-in"
                        android:textColor="#FFFFFF"
                        app:backgroundTint="@color/a7mer"
                        app:cornerRadius="8dp"
                        android:padding="12dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- DRINKING SECTION -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- DRINKING SECTION HEADER WITH TOGGLE -->
                <LinearLayout
                    android:id="@+id/drinking_section_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/boni"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_drink"
                        app:tint="#FFFFFF"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Drinking icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Drinking Section"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF" />

                    <ImageButton
                        android:id="@+id/btn_toggle_drinking"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/arrow_up_float"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        app:tint="#FFFFFF"
                        android:contentDescription="Toggle drinking section" />
                </LinearLayout>

                <!-- DRINKING CONTENT -->
                <LinearLayout
                    android:id="@+id/drinking_section_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Kidney Health Progress Bar -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Kidney Health"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />

                    <ProgressBar
                        android:id="@+id/kidney_health_bar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:progress="50"
                        android:max="100"
                        android:progressTint="@color/boni"
                        android:progressBackgroundTint="#E0E0E0"
                        android:layout_marginBottom="24dp" />

                    <!-- Drinking Stats -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="24dp">

                        <!-- Days Tracked -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/calendar"
                                app:tint="@color/black"
                                android:contentDescription="Calendar icon" />

                            <TextView
                                android:id="@+id/drink_days_tracked"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="days tracked"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Drinks Avoided -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/bottle"
                                app:tint="@color/black"
                                android:contentDescription="Drink icon" />

                            <TextView
                                android:id="@+id/drinks_avoided"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textColor="#333333"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="drinks avoided"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Money Saved -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/money"
                                app:tint="@color/black"
                                android:contentDescription="Wallet icon" />

                            <TextView
                                android:id="@+id/drink_money_saved"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0Dt"
                                android:textSize="18sp"
                                android:textColor="#333333"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="saved"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Drinking Daily Check Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_drinking_daily_check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daily Drinking Check-in"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="@color/boni"
                        app:cornerRadius="8dp"
                        android:padding="12dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- WEIGHT SECTION -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- WEIGHT SECTION HEADER WITH TOGGLE -->
                <LinearLayout
                    android:id="@+id/weight_section_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/bonifete7"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_weight"
                        app:tint="#FFFFFF"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Weight icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Weight Section"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF" />

                    <ImageButton
                        android:id="@+id/btn_toggle_weight"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/arrow_up_float"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        app:tint="#FFFFFF"
                        android:contentDescription="Toggle weight section" />
                </LinearLayout>

                <!-- WEIGHT CONTENT -->
                <LinearLayout
                    android:id="@+id/weight_section_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Calories Needed Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/bonifetfet"
                        app:cardElevation="2dp"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Daily Calories Target"
                                android:textSize="14sp"
                                android:textColor="@color/gray" />

                            <TextView
                                android:id="@+id/calories_needed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="@color/bonifete7" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="calories per day"
                                android:textSize="14sp"
                                android:textColor="@color/gray" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Weight Progress Bar -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Weight Progress"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16sp"
                        android:textColor="@color/bonifete7"
                        android:layout_marginBottom="8dp" />



                    <!-- Weight Stats -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="24dp">

                        <!-- Starting Weight -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/starting_weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="185"
                                    android:textSize="20sp"
                                    android:textColor="#333333"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="starting lbs"
                                    android:textColor="@color/gray"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Current Weight -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/bonifetfet">

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/current_weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="172"
                                    android:textSize="24sp"
                                    android:textColor="@color/boni"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="current lbs"
                                    android:textColor="@color/gray"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Goal Weight -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/goal_weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="150"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="goal lbs"
                                    android:textColor="@color/gray"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Weight Daily Check Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_weight_daily_check"
                        android:layout_width="match_parent"
