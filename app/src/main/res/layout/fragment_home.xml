<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <!-- Lung Damage Progress Bar -->
        <TextView
            android:id="@+id/lung_damage_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Lung Damage"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/lung_damage_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:progress="30"
            android:max="100"
            android:progressTint="#FF6F61"
            android:layout_marginBottom="24dp" />

        <!-- Time Left Until Full Quit Goal -->
        <TextView
            android:id="@+id/quit_goal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Remaining to Quit"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/days_left"
                    android:text="15"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="days"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/clock" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/hours_left"
                    android:text="10"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="hours"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/minutes_left"
                    android:text="25"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="minutes"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Overall Progress Stats -->
        <TextView
            android:text="Overall Progress"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="space_evenly">

            <!-- Days Tracked -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/calendar"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

                <TextView
                    android:id="@+id/stat_days_tracked"
                    android:text="15"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="days tracked"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Cigarettes Avoided -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/cig"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

                <TextView
                    android:id="@+id/stat_cigs_avoided"
                    android:text="40"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="avoided"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Money Saved -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/wallet"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

                <TextView
                    android:id="@+id/stat_money_saved"
                    android:text="$30"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="saved"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Time Won -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/stat_time_won"
                    android:text="12h"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="won back"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
